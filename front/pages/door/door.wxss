/* pages/door/door.wxss */
page{
  background: #f5f5f5;
}
.tabs{
  position: fixed;
  z-index: 9;
  width: 100%;
  height: 45px;
}
.tabs .van-dropdown-menu{
  border-bottom: 1rpx solid #ddd;
  height: 45px;
}
.tabs .van-dropdown-menu__title{
  font-size: 28rpx !important;
}
.tabs .van-dropdown-menu{
  box-shadow: none !important;
}
.container{
  padding: 45px 30rpx 120rpx;
}
.lists{
  padding: 30rpx 0;
}
.lists .item{
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  padding: 20rpx 30rpx;
  position: relative;
  overflow: hidden;
  /* box-shadow: 0 0 10rpx rgba(0, 0, 0, .1); */
}
.lists .item:last-child{
  margin-bottom: 0;
}
.lists .item .tag{
  position: absolute;
  right: 0;
  top: 0;
  font-size: 40rpx;
  width: 200rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
}
.lists .item .tag.blue{
  background: var(--main-blue);
}
.lists .item .tag.yellow{
  background: var(--main-orange);
}
.lists .item .tag.gray{
  background: var(--main-gray);
}
.lists .item .tag.green{
  background: var(--main-green);
}
.lists .item .time{
  text-align: center;
  position: absolute;
  top: 70rpx;
  right: 0;
  font-weight: 600;
  font-size: 30rpx;
  width: 160rpx;
}
.lists .item .time .date{
  font-size: 30rpx;
  color: var(--main-red);
}
.lists .item .door{
  display: flex;
}
.lists .item .door .name{
  font-weight: 600;
  font-size: 32rpx;
}
.lists .item .door .iconfont{
  font-size: 40rpx;
}
.lists .item .info{
  display: flex;
  margin-top: 10rpx;
  font-size: 32rpx;
}
.lists .item .info label{
  flex-shrink: 0;
}
.lists .item .info text{
  display: block;
  width: 550rpx;
  overflow: hidden;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.lists .item .userInfo{
  margin-top: 30rpx;
}
.lists .item .users{
  display: flex;
}
.lists .item .users .user{
  width: 140rpx;
  text-align: center;
  position: relative;
}
.lists .item .users .user .iconfont{
  position: absolute;
  z-index: 1;
  font-size: 32rpx;
}
.icon-wangguan{
  color: #ffb60d;
  left: 50%;
  margin-left: -16rpx;
  top: -28rpx;
}
.icon-del{
  top: -10rpx;
  right: 10rpx;
}
.lists .item .users .user .photo{
  width: 60rpx;
  height: 60rpx;
  background: #eee;
  border-radius: 100%;
  margin: 0 auto 6rpx;
  overflow: hidden;
  padding: 0;
}
.lists .item .users .user .photo image{
  width: 100%;
}
.lists .item .users .user .name{
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.lists .item .btns{
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  flex-wrap: wrap;
}
.lists .item .btns .btn{
  margin: 0 20rpx;
  padding: 0;
  width: 200rpx;
  height: 70rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: transparent;
  color: #fff;
}
.lists .item .btns .share{
  border: 1rpx solid var(--main-color);
  color: var(--main-color);
}
.lists .item .btns .cancel{
  background: #bebebe;
  color: #fff;
  width: 300rpx;
}
.lists .item .btns .iconfont{
  margin-right: 10rpx;
  font-size: 30rpx;
}
.lists .item .btns .exit{
  background: #de868f;
}
.lists .item .btns .full{
  background: var(--main-red);
}
.lists .item .btns .pay{
  background: #e09047;
}
.lists .item .btns .payed{
  background: var(--main-blue);
}
.bottom{
  width: 430rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  position: fixed;
  bottom: 30rpx;
  left: 160rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
}

