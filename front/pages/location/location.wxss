/* pages/location/location.wxss */
page{
  background: #f5f5f5;
}
.container{
  padding: 40rpx 30rpx;
}
.section{
  margin-bottom: 40rpx;
}
.section:first-child{
  border-bottom: 1rpx solid #ddd;
  padding-bottom: 20rpx;
}
.section .title{
  margin-bottom: 40rpx;
  color: #000;
  font-weight: 700;
}
.section:first-child .title{
  color: #999;
}
.section .box{
  display: flex;
  flex-wrap: wrap;
}
.section .box .item{
  background: #fff;
  box-sizing: border-box;
  width: 215rpx;
  height: 70rpx;
  text-align: center;
  font-weight: 600;
  line-height: 70rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 0 20rpx 20rpx 0;
  padding: 0 10rpx;
}
.section .box .item:nth-child(3n){
  margin-right: 0;
}