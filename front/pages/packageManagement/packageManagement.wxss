page{
  background: #f5f5f5;
}
.tabs{
  position: fixed;
  z-index: 9;
  width: 100%;
  height: 45px;
}
.tabs .van-dropdown-menu{
  border-bottom: 1rpx solid #ddd;
  height: 45px;
}
.tabs .van-dropdown-menu__title{
  font-size: 30rpx !important;
}
.tabs .van-dropdown-menu{
  box-shadow: none !important;
}
.container{
  padding: 120rpx 30rpx;
}

.bottom{
  width: 530rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  position: fixed;
  bottom: 30rpx;
  left: 120rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
}

.container .item{
  margin-bottom: 30rpx;
}
.container .item .item-top{
  background-color: #CEEEF4;
  border-top-left-radius: 15rpx;
  border-top-right-radius:15rpx ;
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.container .item .item-top .price{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #7CC3D1;
}
.container .item .item-top .info{
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  margin-left: 30rpx;
}
.container .item .item-top .info .title{
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.container .item .item-top .info .time{
  color: #2593A7;
}
.container .item .item-info{
  background-color: #fff;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius:15rpx ;
  padding: 25rpx;
  overflow: hidden;
}
.container .item .item-bottom{
  background-color: #fff;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius:15rpx ;
  padding: 25rpx;
  overflow: hidden;
  
}


.container .item .item-bottom .line2{
  display: flex;
  justify-content: space-between;
}

.container .item .item-bottom .line3{
  display: flex;
  justify-content: space-between;
  margin-top: 5rpx;
}

.enableBtn{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  background-color: #da635f;
  color: #fff;
}

.editBtn{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  background-color: #45cf40;
  color: #fff;
}
