/* pages/setCoupon/setCoupon.wxss */
page{
  background: #f5f5f5;
}
.tabs{
  position: fixed;
  z-index: 9;
  width: 100%;
  height: 45px;
}
.tabs .van-dropdown-menu{
  border-bottom: 1rpx solid #ddd;
  height: 45px;
}
.tabs .van-dropdown-menu__title{
  font-size: 28rpx !important;
}
.tabs .van-dropdown-menu{
  box-shadow: none !important;
}
.container{
  padding: 45px 16rpx 120rpx;
}
.list{
  padding: 16rpx 0;
  display: inline-block;
  width: 100%;
}
.list .item{
  height: 300rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  padding: 10rpx 30rpx;
  position: relative;
  overflow: hidden;
}
.list .item:last-child{
  margin-bottom: 0;
}
.list .item .img{
  position: absolute;
  width: 100%;
  right: 0;
  top: 0;
  z-index: -1;
}

.list .item .info{
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: rgba(255, 255, 255, 0.877);
  font-size: 26rpx;
  line-height: 40rpx;
  height: 260rpx;
  padding: 20rpx 0 0 0;
}
.list .item .info .name{
  font-size: 34rpx;
  font-weight: 600;
}
.list .item .info label{
  flex-shrink: 0;
  display: block;
  /* width: 100rpx; */
  text-align: justify;
  text-align-last: justify;
}
.list .item .info .expired{
  color: #f24f4f;
}
.list .item .info .btns .btn{
  margin-top: 30rpx;
  padding: 0;
  width: 180rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  color: #fff;  
}
.list .btns {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  /* height: 260rpx; */
}
.list .item  .info .btns .yellow{
  background-color: #f1ac2cd7;
  font-weight: 600;
  color: #fff;
}
.list .item  .info .btns .primary {
  background-color: #27c0fdf8;
  font-weight: 600;
  color: #fff;
}
.bt{
  background-color: #fff;
}
.bt .bottom{
  z-index: 2;
  width: 430rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  position: fixed;
  bottom: 30rpx;
  left: 160rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
}