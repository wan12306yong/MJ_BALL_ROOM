/* pages/store/store.wxss */
page{
  background: #f5f5f5;
}
.container{
  padding: 54px 16rpx 120rpx 16rpx;
}
.search{
  background: #fff;
  width: 100%;
  height: 54px;
  position: fixed;
  top: 0;
  left: 0;
}
.van-search__action{
  padding: 0 20rpx;
}
.list {
  padding-top: 20rpx;
}
.list .item{
  margin-bottom: 16rpx;
  padding: 20rpx;
  /* background: rgb(255, 255, 255); */
  background: linear-gradient( #a0e4fdd3, #f6fdcbb2);
  border-radius: 18rpx;
}
.list .item .top{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.list .item .img{
  width: 240rpx;
  /* height: 240rpx; */
  overflow: hidden;
}
.list .item .img image{
  width: 100%;
}
.list .item .right{
  width: 400rpx;
}
.list .item .right .name{
  font-size: 32rpx;
  line-height: 40rpx;
  color: rgb(75, 71, 71);
}
.list .item .right .address{
  font-size: 24rpx;
  color: #666;
  line-height: 30rpx;
  margin: 10rpx 0;
}
.list .item .link{
  margin-left: 10rpx;
}
.list .item .about{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}
.list .item .info{
  line-height: 40rpx;
}
.list .item .status{
  width: 120rpx;
  height: 40rpx;
  font-weight: bold;
  text-align: center;
  line-height: 40rpx;
  border-radius: 10rpx;
  margin-left: 50rpx;
}
.list .item .green{
  /* border: 1rpx solid var(--main-green); */
  color: #fff;
  background-color: #55ce6fd3;
}
.list .item .yellow{
  /* border: 1rpx solid #2e8cda; */
  background-color: #38b9f5da;
  color: #fff;
}
.list .item .orage{
  /* border: 1rpx solid #db711a; */
  background-color: #f87b4ab7;
  color: #fff;
}
.list .item .gray{
  border: 1rpx solid var(--main-gray);
  color: var(--main-gray);
}
.btns {
  height: 0;
  overflow: hidden;
  transition: height 0.8s;
}
.btns.show {
  height: 170rpx;
}
.list .item .btns{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.list .item .btns .btn{
  margin: 0 5rpx;
  padding: 0;
  width: 180rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  margin-top: 16rpx;
  font-weight: 600;
}

.bottom{
  width: 530rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  position: fixed;
  bottom: 30rpx;
  left: 120rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
}

.van-divider{
  margin: 0 !important;
  line-height: normal !important;
}