/* pages/setStoreInfo/setStoreInfo.wxss */
.container{
  padding: 16rpx 16rpx 200rpx 16rpx;
}
.form .line{
  display: flex;
  margin-bottom: 16rpx;
  padding-top: 30rpx;
  background-color: #fff;
}
.form .line label{
  width: 220rpx;
  line-height: 60rpx;
  color: #646566;
  font-size: 25rpx;
  padding-left: 30rpx;
}
.form .line .right{
  /* display: flex; */
  width: 540rpx;
}

/* switch {
  position: absolute;
  left: 220rpx;
  top: 10rpx;
} */

.form .line input{
  width: 76%;
  height: 70rpx;
  border: 1rpx solid var(--main-color);
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.form .line textarea{
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 160rpx;
  border: 1rpx solid var(--main-color);
  border-radius: 10rpx;
}
.city{
  display: flex;
  align-items: center;
}
.city .picker{
  width: 300rpx;
  position: relative;
}
.city .picker .icon-xuanzex{
  font-size: 30rpx;
  color: #aaa;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -15rpx;
}
.city .icon-dingwei{
  font-size: 40rpx;
  margin-left: 20rpx;
}
.submit{
  width: 100%;
  height: 90rpx;
  bottom: 0;
  left: 0;
  display: flex;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
  background-color: #f4f4f4;
  justify-content: space-between;
  padding-top: 30rpx;
}
.submit button{
  width: 45%;
  border-radius: 0;
  font-size: 30rpx;
  height:90rpx;
  line-height: 90rpx;
  padding: 0;
  background-color: #fff;
}
.submit .cancel{
  background: #fff;
  border: 1px solid var(--main-color);
}