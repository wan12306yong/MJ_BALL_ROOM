/* pages/setUserInfo/setUserInfo.wxss */
.container{
  padding: 0 30rpx;
}
.photo{
  padding: 50rpx 0;
  text-align: center;
}
.photo .img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  margin: 0 auto;
  overflow: hidden;
}
.photo .img image{
  width: 100%;
  height: 100%;
}
.photo .tip{
  color: #999;
  font-size: 24rpx;
  margin:  auto;
  display: inline-block;
  background: transparent;
  padding: 0;
}
.list .item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
  height: 100rpx;
}
.list .item .label{
  color: #666;
  width: 140rpx;
}
.list .item:last-child{
  border: 0;
}
.list .item .left{
  display: flex;
  align-items: center;
}
.list .item .icon-right{
  color: #999;
  font-size: 40rpx;
}
.list .item .btn{
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  font-size: 24rpx;
  width: 165rpx;
  line-height: 60rpx;
  text-align: center;
}
.bottom{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 30rpx;
  box-sizing: border-box;
}
.bottom .btn{
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 16rpx;
}
