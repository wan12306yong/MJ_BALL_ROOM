.list-container {
  padding: 0 14rpx;
  position: relative;
  top: -40rpx;
}
.list{
  padding: 0 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
}
.list .item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
  height: 100rpx;
  font-size: 30rpx;
  padding: 0;
  border-radius: 0;
  font-size: 28rpx;
  background: transparent;
}
.list .item:last-child{
  border: 0;
}
.list .item .left{
  display: flex;
  align-items: center;
}
.list .item .icon{
  font-size: 50rpx;
  margin-right: 20rpx;
}
.list .item .icon-right{
  color: #999;
}
.menu{
  border-top: 20rpx solid #f5f5f5;
  padding: 30rpx 14rpx 30rpx 14rpx;
  margin-top: -50rpx;
}
.menu .title{
  border-width: 0;
  border-left-width: 6rpx;
  border-style: solid;
  padding-left: 10rpx;
  font-size: 32rpx;
  color: #000;
  line-height: 1;
}
.menu .box{
  margin-top: 30rpx;
  padding-top: 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  background-color: #fff;
  border-radius: 20rpx;
}
.menu .box .item{
  text-align: center;
  width: 25%;
  margin-bottom: 40rpx;
  font-size: 24rpx;
}
.menu .box .item .iconfont{
  font-size: 48rpx;
  margin-bottom: 10rpx;
}
