/* pages/user/user.wxss */
.top{
  padding: 30rpx 30rpx 60rpx 30rpx;
}

.top .userInfo{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: transparent;
  padding: 0;
  text-align: left;
  color: #fff;
  line-height: 1;
  border-radius: 0;
}
.top .userInfo .left{
  display: flex;
  margin-left: 20rpx;
  align-items: center;
}
.top .userInfo .photo{
  width: 100rpx;
  height: 100rpx;
  border: 1rpx solid #fff;
  border-radius: 100%;
  overflow: hidden;
}
.top .userInfo .photo image{
  width: 100%;
  height: 100%;
}
.top .userInfo .info{
  margin-left: 40rpx;
  font-size: 30rpx;
}
.top .userInfo .name{
  margin-bottom: 10rpx;
}
.icon-right{
  font-size: 40rpx;
}
.account{
  display: flex;
  justify-content: center;
  padding: 20rpx 0 10rpx;
}
.account .item{
  width: 240rpx;
  text-align: center;
  font-size: 28rpx;
  position: relative;
}
.account .item .num{
  font-size: 36rpx;
  margin-bottom: 10rpx;
}
